<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/snsLayout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".view.slot.SnsLoginFragment">


    <LinearLayout
        android:id="@+id/kakaoLayout"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="10dp"
        android:layout_marginEnd="10dp"
        android:orientation="horizontal"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.2">


        <Button
            android:id="@+id/kakaoCustomLogin"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_margin="5dp"
            android:layout_weight="1"
            android:background="#FFE600"
            android:drawableLeft="@drawable/kakao"
            android:drawablePadding="15dp"
            android:fontFamily="@font/nanumgothic"
            android:paddingStart="10dp"
            android:paddingEnd="10dp"
            android:stateListAnimator="@null"
            android:text="카카오로 로그인"
            android:textStyle="bold" />

        <Button
            android:id="@+id/kakaoCustomLogout"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_margin="5dp"
            android:layout_weight="1"
            android:background="#FFE600"
            android:drawableLeft="@drawable/kakao"
            android:drawablePadding="15dp"
            android:fontFamily="@font/nanumgothic"
            android:paddingStart="10dp"
            android:paddingEnd="10dp"
            android:stateListAnimator="@null"
            android:text="카카오 로그아웃"
            android:textStyle="bold" />

    </LinearLayout>
</androidx.constraintlayout.widget.ConstraintLayout>